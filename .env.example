# Application Configuration
# APP_NAME: The name of your application
APP_NAME="Location Server"

# APP_ENV: Application environment (local, staging, production)
# Set to 'production' for production deployment
APP_ENV=local

# APP_KEY: Application encryption key
# Generate using: php artisan key:generate
APP_KEY=

# APP_DEBUG: Enable/disable debug mode
# IMPORTANT: Set to false in production to prevent sensitive information exposure
APP_DEBUG=true

# APP_URL: The base URL of your application
APP_URL=http://localhost

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# DB_CONNECTION: Database driver (mysql, pgsql, sqlite, sqlsrv)
DB_CONNECTION=mysql

# DB_HOST: Database server hostname or IP address
DB_HOST=127.0.0.1

# DB_PORT: Database server port (default MySQL: 3306)
DB_PORT=3306

# DB_DATABASE: Database name
# Create this database before running migrations
DB_DATABASE=location_server

# DB_USERNAME: Database username
DB_USERNAME=root

# DB_PASSWORD: Database password
DB_PASSWORD=

# Cache, Queue, and Session Configuration
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# SESSION_DRIVER: Session storage driver (file, cookie, database, redis)
SESSION_DRIVER=file

# SESSION_LIFETIME: Session lifetime in minutes (default: 120 = 2 hours)
# Admin sessions will expire after this duration of inactivity
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
# ============================================
# Location Server Specific Configuration
# ============================================

# Admin Default Credentials (for seeding)
# These credentials are used to create the default admin user
# IMPORTANT: Change these values before running seeders in production
ADMIN_DEFAULT_NAME="Admin"
ADMIN_DEFAULT_EMAIL=admin@locationserver.com
ADMIN_DEFAULT_PASSWORD=password123

# API Rate Limiting
# Maximum number of requests per minute for /api/check-location endpoint
API_RATE_LIMIT=60

# Flutter API Key
# Used to authenticate Flutter app requests to public API endpoints
# Generate a secure random key using: php artisan tinker --execute="echo Illuminate\Support\Str::random(64);"
FLUTTER_API_KEY=your_secure_random_key_here_minimum_32_characters

# ============================================
# External API Configuration (for User Sync)
# ============================================

# Credentials for authenticating with external server APIs
# These are used to sync user accounts from external servers (dev, test, prod, etc.)
EXTERNAL_API_EMAIL=admin@example.com
EXTERNAL_API_PASSWORD=your_secure_password_here
