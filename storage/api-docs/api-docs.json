        "/api/latest-version": {
            "get": {
                "tags": [
                    "App Version"
                ],
                "summary": "Get latest APK version",
                "description": "Returns the latest available APK version information including download URL",
                "operationId": "getLatestVersion",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "properties": {
                                                "version_name": {
                                                    "description": "Version name",
                                                    "type": "string",
                                                    "example": "1.0.0"
                                                },
                                                "version_code": {
                                                    "description": "Version code number",
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "release_notes": {
                                                    "description": "Release notes",
                                                    "type": "string",
                                                    "example": "Initial release with new features"
                                                },
                                                "download_url": {
                                                    "description": "APK download URL",
                                                    "type": "string",
                                                    "example": "https://example.com/download/app.apk"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
